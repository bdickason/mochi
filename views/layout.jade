html(lang="en")
  head
    title Mochi v2!
    link(rel='stylesheet', href='/css/style.css')

    // Libraries
    script(type='text/javascript', src='/js/lib/jquery-1.6.3.min.js')
    script(type='text/javascript', src='/socket.io/socket.io.js')
    script(type='text/javascript', src='/js/lib/underscore-min.js')
    script(type='text/javascript', src='/js/lib/backbone-min.js')
    script(type='text/javascript', src='/js/lib/json2.js')
    script(type='text/javascript', src='/js/lib/handlebars-1.0.0.beta.2.js')
    
    // App files Currently we've got everything in separate files. Soon we should compile into one file.
    script(type='text/javascript', src='/js/reports.js')
    script(type='text/javascript', src='/js/mochi.js')    
    
    // Handlebars Templates - move these to separate files eventually
    
    // Report - Sales Tax
    script(type='text/x-handlebars-template', id='salesTax-template')
      h1 Sales Tax
      {{#each report}}
      {{#dates}}
      h3 Start Date:
        {{start}}
        | End Date:
        {{end}}
      {{/dates}}
      
      {{#totals}}
      h2 Totals:
      p Services:
        {{services}}
      p Products: 
        {{products}}
      {{/totals}}
      
      h2 Tax:
      {{#tax}}
      p Services: 
        {{services}}

      p Products: 
        {{products}}
      {{/tax}}
      {{/each}}
  
    // Report - New Clients
    script(type='text/x-handlebars-template', id='newClients-template')
      // Start Listing
      {{#each report}}
      .listingName
        .youSearched
          | You searched:
        .srchResult
          input(name='clientName', type='text', value='Smith')
      .clear
      .listingContainer.clearfix
        .listingBar
          // Why the hell isn't this white? :(
          a(href='#')
            .colLastTrans E-mail
          a(href='#')
            .colUser Name &#x25BE;
          a(href='#')
            .colPhone Phone
          .clear
        .listingList
          ul
            // Start listing users!
            {{#each clients}}
            li
              a(href='#!/users/{{uid}}')
                .colLastTrans 
                  {{email}}
                .colUser
                  {{name}}
                .colPhone
                  {{#each phone}}
                  {{number}}
                  em ({{type}})
                  {{/each}}                  
                .clear
            {{/each}}
            

        {{#dates}}
        h3 Start Date:
          {{start}}
          | End Date:
          {{end}}
        {{/dates}}
        h3. Clients
        {{/each}}
    

  body(id="mochi")
    header.adminBar
      .busName
        p 
          a(href='/') Bloom Beauty Lounge
      .adminBtn
        p 
          a(href='/#!/reports') Reports
      .clear
    .calSearchCheckBar
      p
  != body